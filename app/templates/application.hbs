{{page-title "DecideFrontend"}}
<AuApp class="{{if this.showEnvironment 'au-c-app--environment'}}">
  <AuMainHeader
    @brandLink={{unless
      this.session.isAuthenticated
      "https://www.vlaanderen.be/nl"
    }}
    @homeRoute="index"
    @appTitle={{this.appTitle}}
  />
  <AuMainContainer as |main|>
    <main.content>
      <AuToolbar as |Group|>
        <Group>
          <AuButtonGroup>
            {{#if this.session.isAuthenticated}}
              <AuLink @route="dcat.datasets">Datasets</AuLink>
              <AuLink @route="dcat.catalogs">Catalogs</AuLink>
              <AuLink @route="annotations">Annotated data</AuLink>
              <AuLink @route="receive-credential">Request VC</AuLink>
            {{else}}
              <AuLink @route="mock-login">Mock login</AuLink>
              <AuLink @route="present-credential">Log in through VC</AuLink>
            {{/if}}
          </AuButtonGroup>
        </Group>
        {{#if this.session.isAuthenticated}}
          <Group>
            <AuButtonGroup>
              <AuLink @route="logout" @skin="secondary">Log out</AuLink>
            </AuButtonGroup>
          </Group>
        {{/if}}
      </AuToolbar>
      <AuBodyContainer class="au-u-padding">
        {{outlet}}
      </AuBodyContainer>
    </main.content>
  </AuMainContainer>
</AuApp>
<AuToaster />