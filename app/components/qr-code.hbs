{{! template-lint-disable no-inline-styles }}
{{! template-lint-disable no-at-ember-render-modifiers }}
<div
  class="qr-container"
  style="position: relative; width: 300px; height: 300px;"
>
  {{#if this.isLoading}}
    <div
      class="qr-loader"
      style="
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #f3f3f3;
    "
    >
      <AuLoader @padding="small" />
    </div>
  {{/if}}

  <canvas width="300" height="300" id="qrCode"></canvas>
</div>

{{yield}}